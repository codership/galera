#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

.PHONY: override_dh_strip

build:
	scons $(MAKE_JFLAG) revno=$(GALERA_REVNO) boost_pool=0 garb/garbd libgalera_smm.so $(SCONS_ARGS)

override_dh_strip:
	dh_strip -ppercona-xtradb-cluster-galera-2.x --dbg-package=percona-xtradb-cluster-galera-2.x-dbg
	dh_strip -ppercona-xtradb-cluster-garbd-2.x --dbg-package=percona-xtradb-cluster-garbd-2.x-dbg

override_dh_installinit:
        dh_installinit -ppercona-xtradb-cluster-garbd-2.x  --name=garbd

%:
	dh $@ 
